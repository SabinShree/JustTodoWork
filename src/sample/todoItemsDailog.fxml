<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<DialogPane xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.DialogController">
    <headerText>
        We could put information here.
    </headerText>
    <content>
        <GridPane hgap="10" vgap="10">
            <Label text="Short description : "/>
            <TextField fx:id="shortDescription" promptText="Description here...." GridPane.columnIndex="1"
                       GridPane.rowIndex="0"/>
            <Label text="Details : " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <TextArea fx:id="detailsArea" promptText="Details here...." GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Label text="Deadline: " GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <DatePicker fx:id="deadLinePicker" promptText="Deadline here...." GridPane.columnIndex="1"
                        GridPane.rowIndex="2"/>
            <Label fx:id="warning" text="Fill the text properly" visible="false"/>
        </GridPane>
    </content>
</DialogPane>
